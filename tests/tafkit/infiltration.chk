# abc infiltration xy
run 0 - -vcsn-infiltration -C 'lal_char(a)_b' -f "$srcdir/tests/tafkit/product.dir/abc.gv" "$srcdir/tests/tafkit/product.dir/xy.gv" <<\EOF
