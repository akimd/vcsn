#! /bin/sh

## ------------------------- ##
## Determinize Thompson(a).  ##
## ------------------------- ##
cat >a.dot <<EOF
digraph
{
  vcsn_context = "lal_char(ab)_b"
  0 -> 1 [label = "a"]
  1 -> F1
  I0 -> 0
}
EOF
cat >out.exp <<EOF
digraph
{
  vcsn_context = "lal_char(ab)_b"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I0
    F1
  }
  { 0 1 2 }
  I0 -> 0
  0 -> 1 [label = "a"]
  0 -> 2 [label = "b"]
  1 -> F1
  1 -> 2 [label = "a, b"]
  2 -> 2 [label = "a, b"]
}
EOF
run 0 out.exp -vcsn-determinize -f a.dot
# Idempotence.
run 0 out.exp -vcsn-determinize -f out.exp


