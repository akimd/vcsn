## ----------------------- ##
## Determinize de bruijn.  ##
## ----------------------- ##

# check_de_bruijn SIZE
# --------------------
check_de_bruijn ()
{
  run 0 '' -vcsn-de-bruijn -C 'lal_char(ab)_b'   -o de-bruijn-$1.dot $1
  run 0 '' -vcsn-determinize -f de-bruijn-$1.dot -o de-bruijn-$1-d.dot
  # Idempotence.
  cp de-bruijn-$1-d.dot out.exp
  run 0 out.exp -vcsn-determinize -f de-bruijn-$1-d.dot
}


