#! /bin/sh

cat >in.gv <<\EOF
digraph
{
  vcsn_context = "lal_char(ab)_q"
  rankdir = LR
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I
    F0
    F1
  }
  {
    node [shape = circle]
    0
    1
    2
  }
  I -> 0
  0 -> F0
  0 -> 1 [label = "a, b"]
  1 -> 2 [label = "b"]
  2 -> 2 [label = "a, b"]
  2 -> F1
}
EOF

cat >out.exp <<\EOF
digraph
{
  vcsn_context = "lal_char(ab)_q"
  rankdir = LR
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I0
    F0
    F2
  }
  {
    node [shape = circle]
    0
    1
    2
  }
  I0 -> 0
  0 -> F0 [label = "<3/4>"]
  0 -> 1 [label = "a, b"]
  1 -> 2 [label = "b"]
  2 -> F2 [label = "<3/4>"]
  2 -> 2 [label = "a, b"]
}
EOF

run 0 out.exp -vcsn-right-mult -f in.gv 3/4


