#! /bin/sh

## ----------- ##
## Accessible. ##
## ----------- ##

## check INPUT OUTPUT
## ------------------
check ()
{
  run 0 "$2" -vcsn-accessible -A -I dot -f "$1"
}

## ----------------------------- ##
## Regression: standard(ab+cd).  ##
## ----------------------------- ##

vcsn-standard -e '(?@lal_char(abcd)_b)ab+cd' >a.dot
cat >out.exp <<EOF
digraph
{
  vcsn_context = "lal_char(abcd)_b"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I0
    F3
    F4
  }
  { 0 1 2 3 4 }
  I0 -> 0
  0 -> 1 [label = "a"]
  0 -> 2 [label = "c"]
  1 -> 3 [label = "b"]
  2 -> 4 [label = "d"]
  3 -> F3
  4 -> F4
}
EOF
check a.dot out.exp

