#! /bin/sh

## ----------- ##
## Accessible. ##
## ----------- ##

## check INPUT OUTPUT
## ------------------
check ()
{
  run 0 "$2" -vcsn-accessible -A -I dot -f "$1"
}

## ----------------------------- ##
## Regression: standard(ab+cd).  ##
## ----------------------------- ##

vcsn-standard -e '(?@lal_char(abcd)_b)ab+cd' >a.gv
cat >out.exp <<\EOF
digraph
{
  vcsn_context = "lal_char(abcd)_b"
  rankdir = LR
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I0
    F2
    F4
  }
  {
    node [shape = circle]
    0
    1
    2
    3
    4
  }
  I0 -> 0
  0 -> 1 [label = "a"]
  0 -> 3 [label = "c"]
  1 -> 2 [label = "b"]
  2 -> F2
  3 -> 4 [label = "d"]
  4 -> F4
}
EOF
check a.gv out.exp

