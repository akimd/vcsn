#! /bin/sh

## ---------- ##
## shortest.  ##
## ---------- ##

## check EXP [WORD]
## ----------------
## Check that EXP's shortest word is WORD, or is useless if WORD is
## not given.
check ()
{
  case $# in
    1) run 1 ''   -vcsn-shortest -Ee "$1";;
    2) run 0 "$2" -vcsn-shortest -Ee "$1";;
  esac
}

check '\z'
check '\e' '\e'
check '(a+b)' 'a'
check '(a+b)*' '\e'
check 'ababab' 'ababab'

