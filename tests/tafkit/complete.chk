#! /bin/sh

# check complete algorithm
# ------------------------

check ()
{
    run 0 out.exp -vcsn-complete -A -f "$1"
    run 0 out.exp -vcsn-complete -A -f "$1"
}

cat > graph.dot <<EOF
digraph
{
  vcsn_context = "lal_char(abc)_b"

  I0 -> 0
  0 -> 1 [label = "a"]
  0 -> 2 [label = "b"]
  1 -> 2 [label = "c"]
  2 -> F2
}
EOF

cat > out.exp <<EOF
digraph
{
  vcsn_context = "lal_char(abc)_b"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I0
    F2
  }
  { 0 1 2 3 }
  I0 -> 0
  0 -> 1 [label = "a"]
  0 -> 2 [label = "b"]
  0 -> 3 [label = "c"]
  1 -> 2 [label = "c"]
  1 -> 3 [label = "a, b"]
  2 -> F2
  2 -> 3 [label = "a, b, c"]
  3 -> 3 [label = "a, b, c"]
}
EOF

check graph.dot
check out.exp # Idempotence.

