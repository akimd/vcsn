#! /bin/sh

# check complete algorithm
# ------------------------

check ()
{
    run 0 out.exp -vcsn-complete -A -f "$1"
    run 0 out.exp -vcsn-complete -A -f "$1"
}

cat > graph.dot <<EOF
digraph
{
  vcsn_context = "lal_char(abc)_b"

  I1 -> 1
  1 -> 2 [label = "a"]
  1 -> 3 [label = "b"]
  2 -> 3 [label = "c"]
  3 -> F3
}
EOF

cat > out.exp <<EOF
digraph
{
  vcsn_context = "lal_char(abc)_b"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I1
    F3
  }
  { 1 2 3 4 }
  I1 -> 1
  1 -> 2 [label = "a"]
  1 -> 3 [label = "b"]
  1 -> 4 [label = "c"]
  2 -> 3 [label = "c"]
  2 -> 4 [label = "a, b"]
  3 -> F3
  3 -> 4 [label = "a, b, c"]
  4 -> 4 [label = "a, b, c"]
}
EOF

check graph.dot
check out.exp # Idempotence.

