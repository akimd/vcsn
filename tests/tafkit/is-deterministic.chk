#! /bin/sh

# check_lal EXPECT < LAL.DOT
# --------------------------
# Check that is-deterministic(INPUT) = EXPECT in lal.
check_lal ()
{
  local status
  case $1 in
    (true)  status=0;;
    (false) status=2;;
  esac
  cat >lal.gv
  run $status "$1" -vcsn is-deterministic -A -f lal.gv
}

check_lal "true" <<\EOF
digraph
{
  vcsn_context = "lal_char(ab)_b"

  I0 -> 0
  0 -> 1 [label = "a"]
  0 -> 2 [label = "b"]
  1 -> 0 [label = "b"]
  2 -> 1 [label = "a"]
  2 -> 2 [label = "b"]
  1 -> F1
}
EOF

# A loop.
check_lal "false" <<\EOF
digraph
{
  vcsn_context = "lal_char(abc)_b"

  I0 -> 0
  0 -> 1 [label = "a"]
  0 -> 0 [label = "a"]
  1 -> 1 [label = "b"]
  1 -> 2 [label = "b"]
  2 -> 2 [label = "c"]
  2 -> F2
}
EOF

check_lal "true" <<\EOF
digraph
{
  vcsn_context = "lal_char(ab)_b"

  I0 -> 0
  0 -> 1 [label = "a"]
  0 -> 2 [label = "b"]
  1 -> 3 [label = "a"]
  2 -> 3 [label = "b"]
  3 -> 3 [label = "a"]
  3 -> 3 [label = "b"]
  3 -> F3
}
EOF


check_lal "true" <<\EOF
digraph
{
  vcsn_context = "lal_char(ab)_b"

  I0 -> 0
  0 -> 1 [label = "b"]
  0 -> 2 [label = "a"]
  1 -> 2 [label = "a"]
  2 -> F2
}
EOF

# No states.
check_lal "true" <<\EOF
digraph
{
  vcsn_context = "lal_char(a)_b"
}
EOF

# No initial states.
check_lal "true" <<\EOF
digraph
{
  vcsn_context = "lal_char(a)_b"
  0 -> 1 [label = "a"]
}
EOF

# Two initial states.
check_lal "false" <<\EOF
digraph
{
  vcsn_context = "lal_char(a)_b"

  I0 -> 0
  I1 -> 1
  0 -> 2 [label = "a"]
  1 -> 2 [label = "a"]
  2 -> F2
}
EOF

# An unreachable not deterministic state.
check_lal "false" <<\EOF
digraph
{
  vcsn_context = "lal_char(a)_b"

  I0 -> 0
  1 -> 2 [label = "a"]
  1 -> 3 [label = "a"]
  2 -> F2
}
EOF
