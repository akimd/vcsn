#! /bin/sh

# check CONTEXT RATEXP
# --------------------
# Check that vcsn-cat is idempotent on the standard-of RATEXP.
check ()
{
  run 0 stdout -vcsn-standard-of -E -C "$1" -g abcd -e "$2"
  mv stdout out.exp
  run 0 out.exp -vcsn-cat -Af out.exp
}

check char_b_lal "abcd"
check char_z_lal "{3}\\e"
check char_z_lal "{3}(\\e+a)"


# check < AUTOMATON
# -----------------
# Check that vcsn-cat can read AUTOMATON, and is idempotent on it.
check ()
{
  cat >in.tmp
  sed -n '/^--*$/q;p'             in.tmp >in.dot
  sed -n '/^--*$/,${/^--*$/d;p;}' in.tmp >out.exp
  cp in.dot /tmp
  cp out.exp /tmp
  run 0 out.exp -vcsn-cat -Af in.dot
  $exit
}

fail ()
{
  cat >in.dot
  run 1 '' -vcsn-cat -a in.dot
}

# Check invalid input.
fail <<EOF
digraph
{
  vcsn_context = "char_b_lal"
  vcsn_alphabet = "a"
  1 -> 2 [label = a]
  2 -> F2
  I1 -> 1
}
EOF

fail <<EOF
digraph
{
  vcsn_contxt = char_b_lal
  vcsn_genset = "a"
  1 -> 2 [label = a]
  2 -> F2
  I1 -> 1
}
EOF

fail <<EOF
digraph
{
  vcsn_context = "unknown"
  vcsn_genset = "a"
  1 -> 2 [label = a]
  2 -> F2
  I1 -> 1
}
EOF

