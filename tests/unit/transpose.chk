  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    F1
    F3
  }
  { 1 2 3 }
  1 -> F1 [label = "{d.c.b.a}"]
  1 -> 1 [label = "{b.a}dc"]
  2 -> 1 [label = "{d.c.b.a}dc"]
  3 -> F3 [label = "{d.c.b.a}"]
  3 -> 2 [label = "dc"]
}
digraph
{
  vcsn_context = "char_ratexpset<char_b_lal>_law"
