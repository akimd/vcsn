                                       >      I4
    F2                                 <
    F4                                 <
  I1 -> 1                              |    I1 -> 1 [label = "{(dc).(ba)}"]
  1 -> F1 [label = "{(ab).(cd)}"]      |    I2 -> 2 [label = "{dc}"]
  1 -> 2 [label = "{ab}a"]             |    I4 -> 4 [label = "{dc}"]
  1 -> 3 [label = "{ab}b"]             |    1 -> F1
  2 -> F2 [label = "{cd}"]             |    2 -> 1 [label = "{ba}a"]
  3 -> 4 [label = "{(abc).(bcd)}c"]    |    3 -> 1 [label = "{ba}b"]
  4 -> F4 [label = "{cd}"]             |    4 -> 3 [label = "{(dcb).(cba)}c"]
  4 -> 4 [label = "{(abc).(bcd)}c"]    |    4 -> 4 [label = "{(dcb).(cba)}c"]
EOF


# involution AUTOMATON
# --------------------
# Check that transposition is an involution on AUTOMATON.
involution ()
{
  run 0 stdout -vcsn-transpose -a $1
  mv stdout transpose.out
  cp $1 out.exp
  run 0 out.exp -vcsn-transpose -a transpose.out
}

vcsn-de-bruijn char_z_lal 2 > in.dot
involution in.dot


