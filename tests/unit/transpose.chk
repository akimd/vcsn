    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I1
    I3
  }
  { 1 2 3 }
  I1 -> 1 [label = "{a.b.c.d}"]
  I3 -> 3 [label = "{a.b.c.d}"]
  1 -> 1 [label = "{a.b}cd"]
  1 -> 2 [label = "{a.b.c.d}cd"]
  2 -> 3 [label = "cd"]
}
digraph
{
  vcsn_context = "char_ratexpset<char_b_lal>_law"
