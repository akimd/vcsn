#! /bin/sh

## ------------- ##
## Using pprat.  ##
## ------------- ##

# check PPRAT-ARGUMENTS
# ---------------------
check ()
{
  run 0 stdout rat/pprat -s "$@"
  mv stdout forward.out
  run 0 stdout rat/pprat -T "$@"
  mv stdout transposed.out

  run 1 - -diff -t -W80 --suppress-common-lines -y forward.out transposed.out
}

check 'a' <<EOF
    I1                                 |      I2
    F2                                 |      F1
  I1 -> 1                              |    I2 -> 2
  1 -> 2 [label = "a"]                 |    1 -> F1
  2 -> F2                              |    2 -> 1 [label = "a"]
EOF

check 'abc' <<EOF
    I1                                 |      I4
    F4                                 |      F1
  I1 -> 1                              |    I4 -> 4
  1 -> 2 [label = "a"]                 |    1 -> F1
  2 -> 3 [label = "b"]                 |    2 -> 1 [label = "a"]
  3 -> 4 [label = "c"]                 |    3 -> 2 [label = "b"]
  4 -> F4                              |    4 -> 3 [label = "c"]
EOF

check -L w -W br '{ab}(\e+a+b({abc}c{bcd})*){cd}' <<EOF
                                       >      I2
                                       >      I4
    F2                                 <
    F4                                 <
  I1 -> 1                              |    I1 -> 1 [label = "{(dc).(ba)}"]
  1 -> F1 [label = "{(ab).(cd)}"]      |    I2 -> 2 [label = "{dc}"]
  1 -> 2 [label = "{ab}a"]             |    I4 -> 4 [label = "{dc}"]
  1 -> 3 [label = "{ab}b"]             |    1 -> F1
  2 -> F2 [label = "{cd}"]             |    2 -> 1 [label = "{ba}a"]
  3 -> 4 [label = "{(abc).(bcd)}c"]    |    3 -> 1 [label = "{ba}b"]
  4 -> F4 [label = "{cd}"]             |    4 -> 3 [label = "{(dcb).(cba)}c"]
  4 -> 4 [label = "{(abc).(bcd)}c"]    |    4 -> 4 [label = "{(dcb).(cba)}c"]
EOF


## ---------------------- ##
## Using unit/transpose.  ##
## ---------------------- ##

run 0 - unit/transpose <<EOF
