## Using vcsn-transpose for automata.  ##
## ----------------------------------- ##

# check CONTEXT RATEXP < DIFF
# ---------------------------
# Compare the standard-of RATEXP to its transposed, expect DIFF.
check ()
{
  echo "$2" >input.rat
  run 0 stdout -vcsn-standard-of -e -C "$1" -g abcd -o dot input.rat
  mv stdout forward.out
  cat forward.out
  run 0 stdout -vcsn-transpose -i dot -o dot -a forward.out
  mv stdout transposed.out

  run 1 - -diff -t -W80 --suppress-common-lines -y forward.out transposed.out
}

check char_b_lal 'a' <<EOF
    I1                                 |      I2
    F2                                 |      F1
  I1 -> 1                              |    I2 -> 2
  1 -> 2 [label = "a"]                 |    1 -> F1
  2 -> F2                              |    2 -> 1 [label = "a"]
EOF

check char_b_lal 'abc' <<EOF
    I1                                 |      I4
    F4                                 |      F1
  I1 -> 1                              |    I4 -> 4
  1 -> 2 [label = "a"]                 |    1 -> F1
  2 -> 3 [label = "b"]                 |    2 -> 1 [label = "a"]
  3 -> 4 [label = "c"]                 |    3 -> 2 [label = "b"]
  4 -> F4                              |    4 -> 3 [label = "c"]
EOF

check 'char_ratexpset<char_b_law>_law' '{ab}(\e+a+b({abc}c{bcd})*){cd}' <<EOF
