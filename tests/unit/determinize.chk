## ----------------------- ##
## Determinize de bruijn.  ##
## ----------------------- ##

# check_de_bruijn SIZE
# --------------------
check_de_bruijn ()
{
  run 0 stdout -vcsn-de-bruijn char_b_lal $1
  mv stdout de-bruijn-$1.dot

  run 0 stdout -vcsn-determinize de-bruijn-$1.dot
  mv stdout out.exp

  # Idempotence.
  run 0 out.exp -vcsn-determinize out.exp
}


