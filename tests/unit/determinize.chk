#! /bin/sh

## ------------------------- ##
## Determinize Thompson(a).  ##
## ------------------------- ##
cat >a.dot <<EOF
digraph
{
  vcsn_context = "char_b_lal"
  vcsn_genset = "ab"
  1 -> 2 [label = "a"]
  2 -> F2
  I1 -> 1
}
EOF
cat >out.exp <<EOF
digraph
{
  vcsn_context = "char_b_lal"
  vcsn_genset = "ab"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I1
    F2
  }
  { 1 2 3 }
  I1 -> 1
  1 -> 2 [label = "a"]
  1 -> 3 [label = "b"]
  2 -> F2
  2 -> 3 [label = "a + b"]
  3 -> 3 [label = "a + b"]
}
EOF
run 0 out.exp -vcsn-determinize a.dot
# Idempotence.
run 0 out.exp -vcsn-determinize out.exp


