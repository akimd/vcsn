#! /bin/sh

cat >out.exp <<\EOF
digraph
{
  vcsn_context = "lal_char(abc)_b"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I1
    F1
  }
  { 1 2 }
  I1 -> 1
  1 -> F1
  1 -> 2 [label = "a"]
  2 -> 1 [label = "a, c"]
  2 -> 2 [label = "b, c"]
}
EOF

run 0 out.exp -vcsn-ladybird -C 'lal_char(abc)_b' 2
perl -pi -e 's/_b/_z/g' out.exp
run 0 out.exp -vcsn-ladybird -C 'lal_char(abc)_z' 2

cat >out.exp <<\EOF
digraph
{
  vcsn_context = "lal_char(abc)_zmin"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I1
    F1
  }
  { 1 2 }
  I1 -> 1 [label = "{0}"]
  1 -> F1 [label = "{0}"]
  1 -> 2 [label = "{0}a"]
  2 -> 1 [label = "{0}a, {0}c"]
  2 -> 2 [label = "{0}b, {0}c"]
}
EOF

run 0 out.exp -vcsn-ladybird -C 'lal_char(abc)_zmin' 2
