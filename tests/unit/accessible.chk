#! /bin/sh

## ----------- ##
## Accessible. ##
## ----------- ##

## check INPUT OUTPUT
## ------------------
check ()
{
  run 0 "$2" -vcsn-accessible -A -I dot -f "$1"
}

## -------------------------------- ##
## Regression: standard-of(ab+cd).  ##
## -------------------------------- ##

vcsn-standard-of -e '(?@lal_char(abcd)_b)ab+cd' >a.dot
cat >out.exp <<EOF
digraph
{
  vcsn_context = "lal_char(abcd)_b"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I1
    F4
    F5
  }
  { 1 2 3 4 5 }
  I1 -> 1
  1 -> 2 [label = "a"]
  1 -> 3 [label = "c"]
  2 -> 5 [label = "b"]
  3 -> 4 [label = "d"]
  4 -> F4
  5 -> F5
}
EOF
check a.dot out.exp

