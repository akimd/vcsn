#! /bin/sh

## ---------- ##
## Automata.  ##
## ---------- ##

run 0 stdout -vcsn-ladybird -C 'lal_char(abc)_b' -g 'abc' 4
mv stdout lady4.dot

## label = "b, c" -> label = "{b+c}\e"
perl -p -e '
    s{\[label = "(.*?)"\]}
     {$_ = $1; s/\s//g; s/,/+/g; "\[label = \"{$_}\"\]"}eg;
    s{lal_char\(abc\)_b}{lau_char(abc)_ratexpset<lal_char(abc)_b>}g;
   ' < lady4.dot >out.exp

run 0 out.exp -vcsn-lift -Af lady4.dot

## ------------- ##
## Expressions.  ##
## ------------- ##

run 0 '{a.b.c}\e' -vcsn-lift -C lal_char_b -g abc -Ee "abc"

