#! /bin/sh

## ---------- ##
## Automata.  ##
## ---------- ##

cat >lady4.dot <<\EOF
digraph
{
  vcsn_context = "lal_char_b"
  vcsn_genset = "abc"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I1
    F1
  }
  { 1 2 3 4 }
  I1 -> 1
  1 -> F1
  1 -> 2 [label = "a"]
  2 -> 1 [label = "c"]
  2 -> 2 [label = "b, c"]
  2 -> 3 [label = "a"]
  3 -> 1 [label = "c"]
  3 -> 3 [label = "b, c"]
  3 -> 4 [label = "a"]
  4 -> 1 [label = "a, c"]
  4 -> 4 [label = "b, c"]
}
EOF

## label = "b, c" -> label = "{b+c}\e"
perl -p -e '
    s{\[label = "(.*?)"\]}
     {$_ = $1; s/\s//g; s/,/+/g; "\[label = \"{$_}\"\]"}eg;
    s{lal_char_b}{lau_char_ratexpset<lal_char_b>}g;
   ' < lady4.dot >out.exp

run 0 out.exp -vcsn-lift -Af lady4.dot

## ------------- ##
## Expressions.  ##
## ------------- ##

run 0 '{a.b.c}\e' -vcsn-lift -C lal_char_b -g abc -Ee "abc"

