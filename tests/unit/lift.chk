#! /bin/sh

cat >lady4.dot <<\EOF
digraph
{
  vcsn_context = "char_b_lal"
  vcsn_genset = "abc"
  rankdir = LR
  node [shape = circle]
  {
    node [style = invis, shape = none, label = "", width = 0, height = 0]
    I1
    F1
  }
  { 1 2 3 4 }
  I1 -> 1
  1 -> F1
  1 -> 2 [label = "a"]
  2 -> 1 [label = "c"]
  2 -> 2 [label = "b + c"]
  2 -> 3 [label = "a"]
  3 -> 1 [label = "c"]
  3 -> 3 [label = "b + c"]
  3 -> 4 [label = "a"]
  4 -> 1 [label = "a + c"]
  4 -> 4 [label = "b + c"]
}
EOF

## label = "b + c" -> label = "{b+c}\e"
perl -p -e '
    s{\[label = "(.*?)"\]}
     {$_ = $1; s/\s//g; "\[label = \"{$_}\"\]"}eg;
    s{char_b_lal}{char_ratexpset<char_b_lal>_lau}g;
   ' < lady4.dot >out.exp

run 0 out.exp -vcsn-lift lady4.dot
