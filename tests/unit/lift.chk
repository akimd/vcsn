#! /bin/sh

cat >lady4.dot <<\EOF
digraph A {
  rankdir=LR
  node [shape=circle]
  {
    node [style=invis,shape=none,label="",width=0,height=0]
    I1
    F1
  }
  I1 -> 1
  1 -> F1
  1 -> 2 [label="a"]
  2 -> 2 [label="b + c"]
  2 -> 1 [label="c"]
  2 -> 3 [label="a"]
  3 -> 3 [label="b + c"]
  3 -> 1 [label="c"]
  3 -> 4 [label="a"]
  4 -> 4 [label="b + c"]
  4 -> 1 [label="a + c"]
}
EOF

## label="b + c" -> label="{b+c}\e"
## There is an inversion c+a instead of a+c, I didn't check why.
perl -pe 's{\[label="(.*?)"\]}'                                 \
      -e '{$_ = "\[label=\"{$1}\\\\e\"\]"; s/\s//g; $_}eg;'     \
      -e 's{a\+c}{c+a}g'                                        \
   < lady4.dot >lady4.lifted.out

cat lady4.dot lady4.lifted.out > out.exp
run 0 out.exp unit/lift
