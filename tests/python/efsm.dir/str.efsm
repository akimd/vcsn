#! /bin/sh

me=$(basename "$0")
medir=$(mktemp -d "/tmp/$me.XXXXXX") || exit 1

cat >$medir/symbols.txt <<\EOFSM
\e	0
a	1
c	2
d	3
e	4
g	5
h	6
i	7
l	8
n	9
p	10
r	11
t	12
child	13
grand	14
parent	15
EOFSM

cat >$medir/transitions.fsm <<\EOFSM
0	1	\e
0	2	\e
1	3	grand
2	4	\e
3	1	\e
3	2	\e
4	5	\e
4	6	\e
5	7	child
6	8	parent
7	9	\e
8	9	\e
9
EOFSM

fstcompile --acceptor \
  --keep_isymbols --isymbols=$medir/symbols.txt \
  --keep_osymbols --osymbols=$medir/symbols.txt \
  $medir/transitions.fsm "$@"
sta=$?

rm -rf $medir
exit $sta
