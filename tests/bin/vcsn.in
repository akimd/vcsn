#! @SHELL@
# @configure_input@
# Wrapper around a non installed vcsn to make it work as an installed one.

srcdir='@abs_top_srcdir@'
builddir='@abs_top_builddir@'

# Use the shipped files, not those installed.
VCSN_DATA_PATH=$srcdir/share/vcsn
export VCSN_DATA_PATH

# Use the non-installed binaries.
PATH=$builddir/bin:$srcdir/bin:$PATH
export PATH

# Use the non-installed Python modules, and its libraries.
PYTHONPATH=$srcdir/python:$builddir/python/.libs:$PYTHONPATH
export PYTHONPATH
LD_LIBRARY_PATH=$builddir/lib/.libs:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH
DYLD_LIBRARY_PATH=$builddir/lib/.libs:$DYLD_LIBRARY_PATH
export DYLD_LIBRARY_PATH

prog="vcsn-$1"
shift

exec $prog "$@"

# Local Variables:
# mode: shell-script
# End:
