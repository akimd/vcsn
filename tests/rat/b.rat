%context: b
%include: common-weights.rat

# Check letters classes in input.
[a] => a
[ac] => a+c
[abcd] => [a-d]
[dcba] => [a-d]
[abcdabcd] => [a-d]
[badcabcd] => [a-d]
[a-a] => a
[a-b] => a+b
[a-bc-d] => [a-d]

[b-a] ! invalid letter interval: b-a
[]    ! invalid empty letter class

[^] => [^]
[^] == [a-h]
[^a] == [^a]
[^a] == [b-h]
[^a-bgh] => [c-f]
[^a-cgh] => d+e+f
[^a-bd-h] => c
[^b-a] ! invalid letter interval: b-a
[^a-h] ! invalid empty letter class

# Computations in B.
\e+\e     => \e

# Check classes in output.
a+a+a => a
a+a+a+a => a
a+a+a+a+[b-h] => [^]
[a-h]* => [^]*
[^a] => [^a]
[^ab] => [^ab]
[^abc] => [d-h]
[^abcd] => [e-h]
[bcdefg]+h => [^a]
[bcdefg]+h+h => [^a]
h+[bcdefg] => [^a]

%identities: associative
a+a+a => a+a+a
a+a+a+a => a+a+a+a
a+a+a+a+[b-h] => a+a+a+[^]
[a-h]* => [^]*
[^a] => [^a]
[^ab] => [^ab]
[^abc] => [d-h]
[^abcd] => [e-h]
# Only if the letters are sorted, strictly.
[bcdefg]+h => [^a]
[bcdefg]+h+h => [^a]+h
h+[bcdefg] => h+[^ah]
